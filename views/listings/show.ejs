<% layout("/layout/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        
    <h3>listing</h3>
    </div>
    <div class="card col-6 offset-2">
         <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-image">
  <div class="card-body">
   <p class="card-text">
    <b><%= listing.title %></b>
    <br>
    <%= listing.description %>
    <br>
     &#8377; <%= listing.price.toLocaleString("en-in") %>
     <br>
     <%= listing.location %>
     <br>
     <%= listing.country %>
</p>
  </div>
</div>
    </div>
    <div class="btns">
 
    <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-2">  edit listing</a>
    
    

     <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-2">delete</button>
    </div>
    <br><br>
   
    
</body>
    
       

